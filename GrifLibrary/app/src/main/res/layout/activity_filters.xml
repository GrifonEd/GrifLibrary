<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/back01"
    tools:context=".FiltersActivity">

        <RelativeLayout
            android:id="@+id/toolBarRl"
            android:layout_width="match_parent"
            android:layout_height="?actionBarSize"
            android:background="@drawable/shape_toolbar02"
            >

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/backBtn3"
                android:layout_centerVertical="true"
                android:layout_marginStart="10dp"
                android:background="@color/colorPrimary"
                android:src= "@drawable/ic_back_btn"
                >

            </ImageButton>

            <TextView
                android:id="@+id/BookDet"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="Фильтры"
                android:textColor="@color/white"
                android:textSize="16dp"
                android:textStyle="bold" />

        </RelativeLayout>

        <ImageButton
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/ic_back_white"
        android:background="@color/colorPrimary"
        android:id="@+id/backBtn">

    </ImageButton>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="90dp">

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/AuthorTil"
            app:hintEnabled="false">

        <EditText

        android:layout_width="match_parent"
        android:gravity="center"
        android:layout_height="wrap_content"
        android:id="@+id/AuthorEdit"
        android:layout_marginTop="75dp"
        android:drawableStart="@drawable/ic_person_grey"
        android:drawablePadding="10dp"
        android:background="@drawable/shape_edittext01"
            android:fontFamily="serif"
        android:hint="Введите автора"
        android:textColorHint="@color/grey">

    </EditText>
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/AuthorTil"
            android:layout_marginTop="23dp"
            android:id="@+id/CategoryTil"
            app:hintEnabled="false">

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:fontFamily="serif"
        android:hint="Введите жанр"
        android:drawableStart="@drawable/ic_category"
        android:drawablePadding="10dp"
        android:background="@drawable/shape_edittext01"
        android:textColorHint="@color/grey"
        android:id="@+id/CategoryEdit">

    </EditText>

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/CategoryTil"
            android:layout_marginTop="23dp"
            android:id="@+id/YearTil"
            app:hintEnabled="false">
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="20dp"
        android:focusable="false"
        android:drawableStart="@drawable/ic_baseline_access_time_24"
        android:drawablePadding="10dp"
        android:background="@drawable/shape_edittext01"
        android:textColorHint="@color/grey"
        android:fontFamily="serif"
        android:hint="Введите год издания"
        android:id="@+id/YearEdit">

    </EditText>
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/YearTil"
            android:layout_marginTop="23dp"
            android:id="@+id/VolumeTil"
            app:hintEnabled="false">

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginTop="20dp"
                android:focusable="false"
                android:drawableStart="@drawable/ic_books"
                android:drawablePadding="10dp"
                android:background="@drawable/shape_edittext01"
                android:textColorHint="@color/grey"
                android:fontFamily="serif"
                android:hint="Введите макс. объем"
                android:id="@+id/VolumeEdit">

    </EditText>

        </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/VolumeTil"
        android:layout_marginTop="23dp"
        android:id="@+id/PodpiskaTil"
        app:hintEnabled="false">

        <EditText
            android:layout_width="match_parent"
            android:gravity="center"
            android:layout_marginTop="20dp"
            android:layout_height="wrap_content"
            android:textColorHint="@color/grey"
            android:focusable="false"
            android:drawableStart="@drawable/ic_monetization"
            android:drawablePadding="10dp"
            android:background="@drawable/shape_edittext01"
            android:fontFamily="serif"
            android:hint="Есть/нет доступ по подписке"
            android:id="@+id/SubsctractionEdit">

    </EditText>

        </com.google.android.material.textfield.TextInputLayout>

    <Button
        android:id="@+id/SearchFilter"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/PodpiskaTil"
        android:layout_marginTop="190dp"
        android:background="@drawable/shape_edittext01"
        android:backgroundTint="@color/colorPrimary"
        android:text="Принять"
        android:textColor="@color/white" />
</RelativeLayout>
</RelativeLayout>